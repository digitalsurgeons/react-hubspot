{
  "name": "@digitalsurgeons/react-hubspot",
  "version": "1.1.0",
  "description": "A collection of React hooks for interacting with Hubspot APIs",
  "main": "./dist/index.js",
  "author": "digitalsurgeons",
  "scripts": {
    "build": "babel src --out-dir dist",
    "prepare": "yarn run build",
    "lint": "prettier --write --no-semi --single-quote --jsx-bracket-same-line \"src/**/*.js\""
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-preset-minify": "^0.5.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:digitalsurgeons/react-hubspot.git"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write --no-semi --single-quote --jsx-bracket-same-line",
      "git add"
    ]
  },
  "keywords": [
    "react",
    "react-hooks",
    "react-hook",
    "form",
    "forms",
    "hubspot",
    "hubspot-api",
    "hubspot-form"
  ],
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
